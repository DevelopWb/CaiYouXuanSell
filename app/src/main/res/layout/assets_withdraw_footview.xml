<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_small_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_title"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:text="提现金额"
                    app:layout_constraintLeft_toRightOf="@+id/important_tag_tv"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/important_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/red"
                    app:layout_constraintTop_toTopOf="@+id/item_small_title_tv"></TextView>


            </android.support.constraint.ConstraintLayout>
            <EditText
                android:id="@+id/withDraw_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:text="123"
                android:textSize="24dp"></EditText>

            <TextView
                android:id="@+id/commit_tv"
                style="@style/bt_bg_style"
                android:layout_marginTop="15dp"
                android:text="确定"></TextView>

        </LinearLayout>


</LinearLayout>