<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/commodity_property_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:background="@drawable/stroke_gray_square_bg"
        android:hint="规格名称"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_format_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_accent_circle_bg"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="添加属性"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/commodity_property_name_et"
        app:layout_constraintLeft_toRightOf="@+id/commodity_property_name_et"
        app:layout_constraintTop_toTopOf="@+id/commodity_property_name_et" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/commodity_property_content_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/commodity_property_name_et" />
</android.support.constraint.ConstraintLayout>